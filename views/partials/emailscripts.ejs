    <script type="text/javascript">
      function dummyJob() {
        document
          .getElementById("jobFormAlert")
          .classList.remove("alert-danger");
        document.getElementById("jobFormAlert").classList.add("alert-warning");
        if (document.jobSearchForm.searchTerm.value == "") {
          document.getElementById("jobFormAlert").innerHTML =
            "<strong>Please provide proper job search term!</strong> ";
          $("#jobFormAlert").show();
          setTimeout(() => {
            $("#jobFormAlert").hide();
          }, 2000);
          document.jobSearchForm.searchTerm.focus();
          return false;
        }
        if (
          document.jobSearchForm.location.value == "" ||
          isNaN(document.jobSearchForm.location.value) ||
          document.jobSearchForm.location.value.length !== 5
        ) {
          document.getElementById("jobFormAlert").innerHTML =
            "<strong>Please provide a correct location pin</strong> ";
          $("#jobFormAlert").show();
          setTimeout(() => {
            $("#jobFormAlert").hide();
          }, 2000);
          document.jobSearchForm.location.focus();
          return false;
        }
        if (true) {
          document.getElementById("jobFormAlert").innerHTML =
            "<strong>searching....</strong> ";
          $("#jobFormAlert").show();
          setTimeout(() => {
            document.getElementById("jobFormAlert").innerHTML =
              "<strong>Sorry we cound not find any relevant Jobs !! <br> Please share your details in the form below</strong> ";
            document
              .getElementById("jobFormAlert")
              .classList.remove("alert-warning");
            document
              .getElementById("jobFormAlert")
              .classList.add("alert-danger");
            setTimeout(() => {
              $("#jobFormAlert").hide();
            }, 4000);
          }, 2000);
          return false;
        }
        return true;
      }
    </script>
